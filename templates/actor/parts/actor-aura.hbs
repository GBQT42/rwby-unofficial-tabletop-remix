<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Aura techniques'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='Create item' data-type='auraFeature'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='feature'}}
      </a>
    </div>
  </li>
  {{#each auraFeatures as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-modifier='@abilities.esp.value[ESP]' data-second-attribute="true"
          data-label="{{item.name}}">
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4 class="flexlarge">{{item.name}}</h4>
      {{#if item.system.damageRoll}}
      <div class='item-image'>
        <a class='rollable' data-roll='{{item.system.damageRoll}}' data-label="{{item.name}} secondary roll">
          <img src='systems\rwby-unofficial-tabletop-remix\assets\Icon_damage.webp' title='{{item.name}} secondary roll'
            width='24' height='24' />
        </a>
      </div>
      {{/if}}
    </div>
    <div class='item-controls'>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' auraFeature'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' auraFeature'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>