{{#*inline "defense"}}
<div>
    <label class="resource-label rollable flexlarge align-left" data-roll-modifier="{{modifierFormula}}"
        data-label="{{name}} defence roll">
        {{name}}
    </label>
</div>
{{/inline}}


<section class="sheet-header">

    <div style="flex: 1;">
        {{!-- Defenses --}}
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Defenses'}}</div>
                <div class='item-controls'>
                    <a class='item-control item-create' title='Create item' data-type='defense'>
                        <i class='fas fa-plus'></i>
                        {{localize 'DOCUMENT.New' type='feature'}}
                    </a>
                </div>
            </li>
            {{#each defenses as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-image'>
                        <a class='rollable' data-roll-modifier='{{item.system.rollModifier}}'
                            data-second-attribute="false" data-label="{{item.name}}">
                            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                        </a>
                    </div>
                    <h4 class="flexlarge">{{item.name}}</h4>
                </div>
                <div class='item-controls'>
                    <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='defense'}}'>
                        <i class='fas fa-edit'></i>
                    </a>
                    <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='defense'}}'>
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
    <div class="flexlarge">
        {{!-- Weapon features --}}
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Combat Features'}}</div>
                <div class='item-controls'>
                    <a class='item-control item-create' title='Create item' data-type='combatFeature'>
                        <i class='fas fa-plus'></i>
                        {{localize 'DOCUMENT.New' type='feature'}}
                    </a>
                </div>
            </li>
            {{#each combatFeatures as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-image'>
                        <a class='rollable' data-roll-modifier='{{item.system.rollModifier}}'
                            data-second-attribute="false" data-label="{{item.name}}">
                            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                        </a>
                    </div>
                    <h4 class="flexlarge">{{item.name}}</h4>
                    {{#if item.system.damageRoll}}
                    <div class='item-image'>
                        <a class='rollable' data-roll='{{item.system.damageRoll}}'
                            data-label="{{item.name}} damage roll">
                            <img src='systems\rwby-unofficial-tabletop-remix\assets\Icon_damage.webp' title='{{item.name}} damage roll' width='24' height='24' />
                        </a>
                    </div>
                    {{/if}}
                </div>
                <div class='item-controls'>
                    <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='combatFeature'}}'>
                        <i class='fas fa-edit'></i>
                    </a>
                    <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='combatFeature'}}'>
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</section>